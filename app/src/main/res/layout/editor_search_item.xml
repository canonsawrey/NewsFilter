<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_inset"
    android:layout_marginBottom="0dp"
    android:padding="5dp"
    android:elevation="@dimen/low_elevation"
    android:background="@color/colorAccent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

    <TextView
        android:id="@+id/stream_name_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="TextViewWhite"
        tools:text="Northeastern University"
        android:textColor="@color/colorPrimary"
        android:textCursorDrawable="@null"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guide_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/sort_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Popular"
        tools:src="@drawable/ic_clock_white"
        tools:tint="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="@id/guide_1"
        app:layout_constraintEnd_toEndOf="@id/guide_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/weight_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Popular"
        tools:src="@drawable/ic_clock_white"
        tools:tint="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="@id/guide_2"
        app:layout_constraintEnd_toEndOf="@id/guide_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/days_old_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="14"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/guide_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>