<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewWhite" parent="Widget.AppCompat.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SpinnerWhite" parent="Widget.AppCompat.Spinner">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="StreamHeader" parent="TextAppearance.AppCompat.Headline">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="StreamHeader.Title" parent="StreamHeader">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AcceptButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/colorAccentBlue</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="CancelButton" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:layout_marginStart">@dimen/app_button_width_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_button_width_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
